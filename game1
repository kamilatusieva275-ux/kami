<h2>üëÄ –ù–∞–π–¥–∏ –æ–¥–∏–Ω–∞–∫–æ–≤—ã–µ –∫–∞—Ä—Ç–∏–Ω–∫–∏!</h2>
<div class="grid" id="grid"></div>
<p id="result"></p>
<button id="restart">üîÅ –ò–≥—Ä–∞—Ç—å —Å–Ω–æ–≤–∞</button>

<script>
const emojis = ['üçé','üê∂','üöó','üçå','üê±','üå∏']; 
let selected = [];
let matched = [];

function createGame() {
  const grid = document.getElementById('grid');
  grid.innerHTML = "";
  document.getElementById("result").innerText = "";
  document.getElementById("restart").style.display = "none";
  matched = [];
  selected = [];

  let items = [...emojis, ...emojis].sort(() => Math.random() - 0.5);
  
  items.forEach((emoji, index) => {
    const div = document.createElement('div');
    div.classList.add('card');
    div.textContent = emoji;
    div.dataset.value = emoji;
    div.addEventListener('click', () => check(div));
    grid.appendChild(div);
  });
}

function check(card) {
  if (selected.includes(card) || matched.includes(card)) return;

  card.style.transform = "scale(1.1)";
  selected.push(card);

  if (selected.length === 2) {
    const [first, second] = selected;
    if (first.dataset.value === second.dataset.value) {
      first.classList.add('correct');
      second.classList.add('correct');
      matched.push(first, second);
      selected = [];
      if (matched.length === document.querySelectorAll('.card').length) {
        document.getElementById("result").innerText = "üéâ –ú–æ–ª–æ–¥–µ—Ü! –í—Å–µ –∫–∞—Ä—Ç–∏–Ω–∫–∏ –Ω–∞–π–¥–µ–Ω—ã!";
        document.getElementById("restart").style.display = "block";
      }
    } else {
      first.classList.add('wrong');
      second.classList.add('wrong');
      setTimeout(() => {
        first.classList.remove('wrong');
        second.classList.remove('wrong');
        first.style.transform = "scale(1)";
        second.style.transform = "scale(1)";
        selected = [];
      }, 700);
    }
  }
}

document.getElementById("restart").addEventListener("click", createGame);
createGame();
</script>

